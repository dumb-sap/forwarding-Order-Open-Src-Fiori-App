<mvc:View xmlns:cards="sap.f.cards" 
    controllerName="forwardingorder.controller.View2"
	height="100%" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
